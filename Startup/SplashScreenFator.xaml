        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Name="parentCanvas"
        Background="White"
        >
  <Grid.RowDefinitions>
    <RowDefinition Height="*" />
  </Grid.RowDefinitions>
  <Grid.ColumnDefinitions>
    <ColumnDefinition Width="*"/>
    <ColumnDefinition Width="600"/>
    <ColumnDefinition Width="*"/>
  </Grid.ColumnDefinitions>
  <Image HorizontalAlignment="Stretch" Source="/Images/carregando_capa_fundo.png" Grid.Row="0" Grid.Column="1"/>
  <!--<Image Source="/Images/carregando_capa_progress.png" HorizontalAlignment="Center" Width="100" Grid.Row="0" Grid.Column="1" Margin="0,-280,0,0"/>-->
  <TextBlock Foreground="#0086C9" Height="25" Grid.Row="0" Grid.Column="1" Text="Carregando Aplicativo" HorizontalAlignment="Center" FontWeight="Bold" TextWrapping="Wrap" Margin="0,-150,0,0" />
  <TextBlock Foreground="#0086C9" x:Name="uxStatus"  Height="25" Grid.Row="0" Grid.Column="1" Text="" HorizontalAlignment="Center" FontWeight="Bold" TextWrapping="Wrap" Margin="0,-120,0,0" />


</Grid>
